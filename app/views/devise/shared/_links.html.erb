<%- if controller_name != 'sessions' %>
  <div class="mt-4 text-center">
    <%= link_to "Iniciar Sesión", new_session_path(resource_name), class:"inline-block rounded-full w-2/4 p-2 bg-indigo-700 text-white text-sm font-semibold border border-black text-center transition cursor-pointer hover:bg-indigo-500"%><br />
    </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="mt-4 text-center">
  <%= link_to "Registrate", new_registration_path(resource_name), class:"inline-block rounded-full w-2/4 p-2 bg-transparent text-black font-semibold border border-black text-center transition cursor-pointer hover:bg-black hover:text-white"%>
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-4 text-center">
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"w-full text-sm rounded-full bg-transparent text-black font-semibold border border-black text-center transition cursor-pointer hover:bg-black mb-2 hover:text-white p-2" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
