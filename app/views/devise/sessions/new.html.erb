<div class="container mx-auto pt-16">
  <div class="w-full bg-white mx-auto p-10 sm:w-4/12 mt-24">
  <h2 class="text-xl font-bold text-red-600 text-center">Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="field py-3">
      <%= f.label :email, class:"font-semibold text-lg" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 rounded-md text-sm focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500", required:true %>
    </div>

    <div class="field py-3">
      <%= f.label 'Contraseña', class:"font-semibold text-lg" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-3 rounded-md text-sm focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500", required:true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "Recordarme" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar Sesión", class:"rounded w-full p-2 bg-red-600 text-white font-semibold cursor-pointer hover:bg-red-400 mt-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>